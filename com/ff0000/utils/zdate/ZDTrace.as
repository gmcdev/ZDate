package com.ff0000.utils.zdate {		public class ZDTrace {		/* --- MISC DATA ---------------------------------------------------------------------------------------------		 *		 *		 */		private var verbosity:int = 0;		/* --- SINGLETON SETUP ---------------------------------------------------------------------------------------		 *		 *		 */		private static var instance:ZDTrace;		private static var allowInstantiation:Boolean;		// singleton management		internal static function getInstance():ZDTrace {			if( instance == null ) {				allowInstantiation = true;				instance = new ZDTrace();				allowInstantiation = false;			}			return instance;		}		public function ZDTrace():void {			if( !allowInstantiation ) {				throw new Error( "Error: Instantiation failed: Use ZDTrace.getInstance() instead of new.");			}		}								/* --- ZD TRACE ---------------------------------------------------------------------------------------------		 *		 *		 */		public function startZDTrace( $_level:int ):void {			verbosity = $_level;		}		public function log( $_string:String, $_level:int ):void {			if( $_level <= verbosity ) {				trace( $_string );			}		}			}}